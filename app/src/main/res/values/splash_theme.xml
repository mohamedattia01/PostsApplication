<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_color_start</item>
        <item name="windowSplashScreenAnimatedIcon">@raw/post</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.PostsApplication</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/splash_color_start</item>
        <item name="android:navigationBarColor">@color/splash_color_start</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>